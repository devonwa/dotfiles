{
  ///////////////////////////////////////////
  // VS Code application settings
  "debug.javascript.autoAttachFilter": "smart",
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": "explicit"
  // },
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorSurroundingLines": 8,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "FiraCode Nerd Font, Fira Code, Fira Mono, Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.lineNumbers": "relative",
  "editor.minimap.showSlider": "always",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [
    { "column": 80, "color": "#272727" },
    { "column": 120, "color": "#303030" }
  ],
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "[git-commit]": { "editor.rulers": [50] },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.mergeEditor": false,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "security.allowedUNCHosts": ["wsl.localhost"],
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 30000,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.commandCenter": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreFullscreen": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#1c1c1c",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#96a2a5",
    "statusBar.foreground": "#a0a0a0"
    // "statusBarItem.remoteBackground": "#4e4e4e",
    // "statusBarItem.remoteForeground": "#1c1c1c"
  },
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.editor.centeredLayoutFixedWidth": true,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "zenMode.centerLayout": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.fullScreen": false,
  "zenMode.restore": true,

  ///////////////////////////////////////////
  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["shift+l"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["shift+h"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["<leader>", "tab"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditor",
        "workbench.action.acceptSelectedQuickOpenItem"
      ]
    },
    {
      "before": ["<leader>", "shift+tab"],
      "commands": ["workbench.action.quickOpenNavigateNextInRecentFilesPicker"]
    },
    { "before": ["<leader>", "d"], "commands": ["workbench.view.debug"] },
    { "before": ["<leader>", "e"], "commands": ["workbench.view.explorer"] },
    { "before": ["<leader>", "f"], "commands": ["actions.find"] },
    {
      "before": ["<leader>", "F"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "p"],
      "commands": ["workbench.action.quickOpen"]
    },
    { "before": ["<leader>", "n"], "commands": [":nohl"] },
    { "before": ["s"], "after": ["<leader>", "<leader>", "s"] },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.view.testing.focus"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["<C-t>"], "after": ["terminal.active"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["n"], "after": ["n", "z", "z", "z", "v"] },
    { "before": ["N"], "after": ["N", "z", "z", "z", "v"] }
    // { // find a way to offset up ~7 lines
    //   "before": ["z", "z"],
    //   "after": ["z", "z"]
    // }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-d>": true,
    "<C-f>": false,
    "<C-n>": false,
    "<C-w>": false
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["bookmarks.toggleLabeled"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.listFromAllFiles"]
    },
    {
      "before": ["<leader>", "B"],
      "commands": ["bookmarks.list"]
    }
  ],

  ///////////////////////////////////////////
  // Language and Framework-specific settings
  "angular.view-engine": true,

  "eslint.validate": ["javascript", "typescript", "typescriptreact"],

  "go.coverageDecorator": { "type": "gutter" },
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "go.lintTool": "golangci-lint",
  "go.formatTool": "gofmt",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[helm]": {
    "editor.formatOnSave": false
  },
  "html.format.wrapAttributes": "force-aligned",
  "html.format.wrapLineLength": 0,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",

    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "never"
    }
  },
  "[scala]": {
    "editor.defaultFormatter": "scalameta.metals"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "typescript.format.enable": true,
  "typescript.format.semicolons": "insert",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  ///////////////////////////////////////////
  // Extensions
  "github.gitProtocol": "ssh",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "zenMode.showTabs": "single",
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "makefile.configureOnOpen": true

  ///////////////////////////////////////////
  // Auto-added, unsorted
}
